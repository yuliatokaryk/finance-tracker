<table class="table table-hover table-bordered border-dark">
  <thead>
    <tr class="table-primary">
      <th scope="col">â„–</th>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Email</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each_with_index do |friend, index| %>
      <tr class="table-secondary">
        <th scope="row"><%= index + 1 %></th>
        <td scope="row"><%= friend.first_name %></td>
        <td scope="row"><%= friend.last_name %></td>
        <td scope="row"><%= friend.email %></td>
        <td>
          <%= link_to 'Profile', class:"btn btn-warning btn-sm" %>
          <%= link_to 'Unfollow', method: :delete, data: {confirm: 'Are you sure'}, class:"btn btn-warning btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
